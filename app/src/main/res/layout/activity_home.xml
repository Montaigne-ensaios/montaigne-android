<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomeActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="422dp"
        android:layout_height="70dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textnomedoapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/app_name"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textTipoDeEnsaio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="serif"
        android:text="@string/tipos_ensaio"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textnomedoapp"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toStartOf="@+id/bntInformSobreNois"
        app:layout_constraintTop_toBottomOf="@+id/textnomedoapp" />

    <TextView
        android:id="@+id/textMeusProj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="@string/Meus_projetos"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textTipoDeEnsaio"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textTipoDeEnsaio"
        app:layout_constraintTop_toBottomOf="@+id/recyclerCategorias" />

    <ImageButton
        android:id="@+id/bntMenuExcluirAdicionarProj"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="180dp"
        android:background="@color/transparente"
        app:layout_constraintBottom_toBottomOf="@+id/textMeusProj"
        app:layout_constraintStart_toEndOf="@+id/textMeusProj"
        app:layout_constraintTop_toTopOf="@+id/textMeusProj"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/logo_para_sal_o_de_beleza" />

    <ImageButton
        android:id="@+id/bntInformSobreNois"
        android:layout_width="31dp"
        android:layout_height="29dp"
        android:layout_marginEnd="10dp"
        android:background="@color/transparente"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="@+id/textnomedoapp"
        app:layout_constraintEnd_toStartOf="@+id/textnomedoapp"
        app:layout_constraintTop_toTopOf="@+id/textnomedoapp"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/logo_para_sal_o_de_beleza"
        app:tint="@color/white" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCategorias"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/bntMenuExcluirAdicionarProj"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textMeusProj"
        app:layout_constraintTop_toBottomOf="@+id/textTipoDeEnsaio" />

</androidx.constraintlayout.widget.ConstraintLayout>