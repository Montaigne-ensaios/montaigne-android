<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SPTDadosFuro">

    <EditText
        android:id="@+id/fieldSPTDadosFuroDataInic"
        style="@style/Edit_Text"
        android:layout_width="290dp"
        android:layout_height="52dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Data de inicio"
        android:drawableRight="@drawable/ic_data"
        android:inputType="textPersonName"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="@+id/TxtSptDadosFuroDataInicio"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/TxtSptDadosFuroDataInicio"
        app:layout_constraintTop_toBottomOf="@+id/TxtSptDadosFuroDataInicio" />

    <TextView
        android:id="@+id/TxtSptNFuroTextObrgtorio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="@string/TxtSptNFuroTextObrigatorioStr"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/BntSptNFuroIniciarEnsaio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/BntSptNfuroHome"
        android:layout_width="50dp"
        android:layout_height="38dp"
        android:layout_marginStart="20dp"
        android:background="@color/transparente"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/BntSptNFuroIniciarEnsaio"
        app:layout_constraintEnd_toStartOf="@+id/BntSptNFuroIniciarEnsaio"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/BntSptNFuroIniciarEnsaio"
        app:srcCompat="@drawable/ic_home_2" />

    <Button
        android:id="@+id/BntSptNFuroIniciarEnsaio"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:layout_marginBottom="20dp"
        android:text="@string/BntSptNFuroIniciaEnsaioTxt"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/BntSptDadosFuroHelpDatInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:background="@color/transparente"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/fieldSPTDadosFuroDataInic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/fieldSPTDadosFuroDataInic"
        app:layout_constraintTop_toTopOf="@+id/fieldSPTDadosFuroDataInic"
        app:srcCompat="@drawable/ic_help" />

    <ImageButton
        android:id="@+id/BntSptDadosFuroHelpNvdFuroN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:background="@color/transparente"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/FieldSptDadosFuroNvdFuroN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/FieldSptDadosFuroNvdFuroN"
        app:layout_constraintTop_toTopOf="@+id/FieldSptDadosFuroNvdFuroN"
        app:srcCompat="@drawable/ic_help" />

    <ImageButton
        android:id="@+id/BntSptDadosFuroHelpCdFuroN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:background="@color/transparente"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/BntSptDadosFuroCapturarLocal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/BntSptDadosFuroCapturarLocal"
        app:layout_constraintTop_toTopOf="@+id/BntSptDadosFuroCapturarLocal"
        app:srcCompat="@drawable/ic_help" />

    <EditText
        android:id="@+id/FieldSptDadosFuroNvdFuroN"
        style="@style/Edit_Text"
        android:layout_width="290dp"
        android:layout_height="52dp"
        android:layout_marginTop="10dp"
        android:drawableRight="@drawable/ic_referencia_nivel"
        android:ems="10"
        android:hint="nível do furo"
        android:inputType="number"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="@+id/TxtSptNDadosFuroNvdFuroN"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/TxtSptNDadosFuroNvdFuroN"
        app:layout_constraintTop_toBottomOf="@+id/TxtSptNDadosFuroNvdFuroN" />

    <TextView
        android:id="@+id/TxtSptNDadosFuroNvdFuroN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/TxtSptDadosFuroNvdFuroStr"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/TxtSptDadosFuroDataInicio"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/TxtSptDadosFuroDataInicio"
        app:layout_constraintTop_toBottomOf="@+id/fieldSPTDadosFuroDataInic" />

    <TextView
        android:id="@+id/TxtSptDadosFuroCodnadasFuroN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/TxtSptDadosFuroCodernadasFuroN"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/TxtSptNDadosFuroNvdFuroN"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/TxtSptNDadosFuroNvdFuroN"
        app:layout_constraintTop_toBottomOf="@+id/FieldSptDadosFuroNvdFuroN" />

    <TextView
        android:id="@+id/TxtSptDadosFuroDataInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/TxtSptDadosFuroDatainicioStr"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/TxtSptNFuroTituloCrbUnic"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="@+id/BntSptDadosFuroBackCrbDefinitivo"
        app:layout_constraintTop_toBottomOf="@+id/TxtSptNFuroTituloCrbUnic" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/TollbarSptNfuros"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TxtSptNFuroTituloCrbUnic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Carimbo Único do Furo N"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/BntSptDadosFuroBackCrbDefinitivo"
        android:layout_width="43dp"
        android:layout_height="40dp"
        android:background="@color/transparente"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/TxtSptNFuroTituloCrbUnic"
        app:layout_constraintEnd_toStartOf="@+id/TxtSptNFuroTituloCrbUnic"
        app:layout_constraintStart_toStartOf="@+id/TollbarSptNfuros"
        app:layout_constraintTop_toTopOf="@+id/TxtSptNFuroTituloCrbUnic"
        app:srcCompat="@drawable/ic_back"
        app:tint="@color/white" />

    <Button
        android:id="@+id/BntSptDadosFuroCapturarLocal"
        style="@style/Edit_Text"
        android:layout_width="290dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_local"
        android:text="@string/BntSptDadosFuroCapturarLocalStr"
        app:layout_constraintEnd_toEndOf="@+id/TxtSptDadosFuroCodnadasFuroN"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/TxtSptDadosFuroCodnadasFuroN"
        app:layout_constraintTop_toBottomOf="@+id/TxtSptDadosFuroCodnadasFuroN" />

</androidx.constraintlayout.widget.ConstraintLayout>