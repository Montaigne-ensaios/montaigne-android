        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/TxtSptCriarNAmostra"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/TxtSptCriarNAmostra"
