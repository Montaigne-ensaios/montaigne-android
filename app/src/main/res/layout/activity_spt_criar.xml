        android:hint="0"
        android:inputType="number"
        android:maxLength="4"
        android:padding="6dp"
        app:layout_constraintEnd_toEndOf="@+id/fieldSPTCriarGlp1"
        app:layout_constraintStart_toStartOf="@+id/fieldSPTCriarGlp1"
