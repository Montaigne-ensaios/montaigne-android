        android:hint="hint"
        android:inputType="number"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="@+id/TxtSptCriarNdagua"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnSPTCriarHelpAgua"
        app:layout_constraintTop_toBottomOf="@+id/TxtSptCriarNdagua" />

    <EditText
        android:id="@+id/fieldSPTCriarProf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:drawableRight="@android:drawable/btn_dialog"
        android:ems="10"
        android:hint="@string/Profundidade"
        android:inputType="number"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/TxtSptCriarProfdadAmostr"
        app:layout_constraintStart_toEndOf="@+id/TxtSptCriarProfdadAmostr"
        app:layout_constraintTop_toTopOf="@+id/TxtSptCriarProfdadAmostr" />

    <EditText
        android:id="@+id/fieldSPTCriarGlp1"
        android:layout_width="74dp"
        android:layout_height="38dp"
        android:layout_marginTop="30dp"
        android:background="@android:drawable/btn_dialog"
        android:ems="10"
        android:hint="0"

        android:inputType="number"
        android:maxLength="4"
        android:padding="6dp"
        app:layout_constraintEnd_toEndOf="@+id/TxtSptCriarGolpes"
        app:layout_constraintStart_toStartOf="@+id/TxtSptCriarGolpes"
        app:layout_constraintTop_toBottomOf="@+id/TxtSptCriarGolpes" />

    <EditText
        android:id="@+id/fieldSPTCriarPen1"
