    <TextView
        android:id="@+id/TxtSptCriarGolpes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/TxtSptCriarGolpesStr"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/TxtSptCriarPenetraç"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/TxtSptCriarSegmentAmtra"
        app:layout_constraintTop_toBottomOf="@+id/TxtSptCriarNAmostra" />

    <TextView
        android:id="@+id/TxtSptCriarPenetraç"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/TxtSptCriarPenetraçãoStr"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/TxtSptCriarGolpes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/TxtSptCriarGolpes" />

    <TextView
        android:id="@+id/TxtSptCriarNAmostra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
