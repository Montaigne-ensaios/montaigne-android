<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundo_2"
    tools:context=".activity.SPTCriar"
    tools:layout_editor_absoluteX="134dp"
    tools:layout_editor_absoluteY="4dp">

    <Button
        android:id="@+id/BntSptCriarFinalizarEnsaio"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/black"
        android:fontFamily="sans-serif-medium"
        android:padding="5dp"
        android:text="@string/BtnSPTCriarFinlzaEnsStr"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintStart_toEndOf="@+id/bntSptCriarHome" />

    <ImageButton
        android:id="@+id/bntSptCriarHome"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:background="@color/transparente"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/BntSptCriarFinalizarEnsaio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/BntSptCriarFinalizarEnsaio"
        app:srcCompat="@drawable/ic_home_2" />

    <TextView
        android:id="@+id/TxtSptCriarNdagua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/TxtSptCriarNvaguaStr"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/TxtSptCriarTitulodFuro"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toEndOf="@+id/BntSPTCriarBackCrbUnico"
        app:layout_constraintTop_toBottomOf="@+id/TxtSptCriarTitulodFuro" />

    <TextView
        android:id="@+id/TxtSptCriarProfdadAmostr"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/TxtSptcriarProfundidadeStr"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/TxtSptCriarTitulodAmostraN" />

    <TextView
        android:id="@+id/TxtSptCriarSegmentAmtra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="80dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/TxtSptCriarSegmentosAmstraStr"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TxtSptCriarTitulodAmostraN" />

    <TextView
        android:id="@+id/TxtSptCriarGolpes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/TxtSptCriarGolpesStr"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/TxtSptCriarPenetraçPGolpe"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/TxtSptCriarSegmentAmtra"
        app:layout_constraintTop_toBottomOf="@+id/TxtSptCriarTitulodAmostraN" />

    <TextView
        android:id="@+id/TxtSptCriarPenetraçPGolpe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/TxtSptCriarPenetraçãoStr"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/TxtSptCriarGolpes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/TxtSptCriarGolpes" />

    <TextView
        android:id="@+id/TxtSptCriarTitulodAmostraN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Amostra 1"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fieldSPTCriarNvdAgua" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/TollbarSptCriar"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="@color/gradiente_claro"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TxtSptCriarTitulodFuro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Furo N- SP0N"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/BntSPTCriarBackCrbUnico"
        android:layout_width="43dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:background="@color/transparente"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/TxtSptCriarTitulodFuro"
        app:layout_constraintEnd_toStartOf="@+id/TxtSptCriarTitulodFuro"
        app:layout_constraintTop_toTopOf="@+id/TxtSptCriarTitulodFuro"
        app:srcCompat="@drawable/ic_back"
        app:tint="@color/white" />

    <EditText
        android:id="@+id/fieldSPTCriarNvdAgua"
        style="@style/Edit_Text"
        android:layout_width="290dp"
        android:layout_height="52dp"
        android:layout_marginTop="10dp"
        android:drawableRight="@drawable/ic_edit"
        android:ems="10"
        android:hint="Nivel de água"
        android:inputType="number"
        android:padding="12dp"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/TxtSptCriarNdagua"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bntSptCriarHelpNvagua"
        app:layout_constraintTop_toBottomOf="@+id/TxtSptCriarNdagua" />

    <EditText
        android:id="@+id/fieldSPTCriarProfdadeAmstr"
        style="@style/Edit_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:drawableRight="@drawable/ic_edit"
        android:ems="10"
        android:hint="xx"
        android:inputType="number"
        android:padding="12dp"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/TxtSptCriarProfdadAmostr"
        app:layout_constraintStart_toEndOf="@+id/TxtSptCriarProfdadAmostr"
        app:layout_constraintTop_toTopOf="@+id/TxtSptCriarProfdadAmostr" />

    <EditText
        android:id="@+id/fieldSPTCriarGlp1"
        android:layout_width="74dp"
        android:layout_height="38dp"
        android:layout_marginTop="30dp"
        android:background="@android:drawable/editbox_background"
        android:ems="10"
        android:hint="0"

        android:inputType="number"
        android:maxLength="4"
        android:padding="6dp"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toEndOf="@+id/TxtSptCriarGolpes"
        app:layout_constraintStart_toStartOf="@+id/TxtSptCriarGolpes"
        app:layout_constraintTop_toBottomOf="@+id/TxtSptCriarGolpes" />

    <EditText
        android:id="@+id/fieldSPTCriarPen1"
        android:layout_width="74dp"
        android:layout_height="38dp"
        android:layout_marginTop="30dp"
        android:background="@android:drawable/editbox_background"

        android:ems="10"
        android:hint="15"
        android:inputType="number"
        android:maxLength="4"
        android:padding="6dp"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/TxtSptCriarPenetraçPGolpe"
        app:layout_constraintStart_toStartOf="@+id/TxtSptCriarPenetraçPGolpe"
        app:layout_constraintTop_toBottomOf="@+id/TxtSptCriarPenetraçPGolpe" />

    <EditText
        android:id="@+id/fieldSPTCriarPen2"
        android:layout_width="74dp"
        android:layout_height="38dp"
        android:layout_marginTop="30dp"
        android:background="@android:drawable/editbox_background"

        android:ems="10"
        android:hint="15"
        android:inputType="number"
        android:maxLength="4"
        android:padding="6dp"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/fieldSPTCriarPen1"
        app:layout_constraintStart_toStartOf="@+id/fieldSPTCriarPen1"
        app:layout_constraintTop_toBottomOf="@+id/fieldSPTCriarPen1" />

    <EditText
        android:id="@+id/fieldSPTCriarPen3"
        android:layout_width="74dp"
        android:layout_height="38dp"
        android:layout_marginTop="30dp"

        android:background="@android:drawable/editbox_background"
        android:ems="10"
        android:hint="15"
        android:inputType="number"
        android:maxLength="4"
        android:padding="6dp"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/fieldSPTCriarPen2"
        app:layout_constraintStart_toStartOf="@+id/fieldSPTCriarPen2"
        app:layout_constraintTop_toBottomOf="@+id/fieldSPTCriarPen2" />

    <EditText
        android:id="@+id/fieldSPTCriarGlp2"
        android:layout_width="74dp"
        android:layout_height="38dp"
        android:layout_marginTop="30dp"
        android:background="@android:drawable/editbox_background"
        android:ems="10"
        android:hint="0"
        android:inputType="number"
        android:maxLength="4"
        android:padding="6dp"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/fieldSPTCriarGlp1"
        app:layout_constraintStart_toStartOf="@+id/fieldSPTCriarGlp1"
        app:layout_constraintTop_toBottomOf="@+id/fieldSPTCriarGlp1" />

    <EditText
        android:id="@+id/fieldSPTCriarGlp3"
        android:layout_width="74dp"
        android:layout_height="38dp"
        android:layout_marginTop="30dp"
        android:background="@android:drawable/editbox_background"
        android:ems="10"
        android:hint="0"
        android:inputType="number"
        android:maxLength="4"
        android:padding="6dp"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/fieldSPTCriarGlp2"
        app:layout_constraintStart_toStartOf="@+id/fieldSPTCriarGlp2"
        app:layout_constraintTop_toBottomOf="@+id/fieldSPTCriarGlp2" />

    <ImageButton
        android:id="@+id/bntSptCriarHelpNvagua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="@color/transparente"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="@+id/TxtSptCriarNdagua"
        app:layout_constraintEnd_toStartOf="@+id/TxtSptCriarNdagua"
        app:layout_constraintHorizontal_bias="0.33"
        app:layout_constraintStart_toStartOf="@+id/BntSPTCriarBackCrbUnico"
        app:layout_constraintTop_toTopOf="@+id/TxtSptCriarNdagua"
        app:srcCompat="@drawable/ic_help" />

    <ImageView
        android:id="@+id/imgSPTCriarSeg1"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="@+id/TxtSptCriarSegmentAmtra"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/TxtSptCriarSegmentAmtra"
        app:layout_constraintTop_toBottomOf="@+id/TxtSptCriarSegmentAmtra"
        app:srcCompat="@drawable/icon_1"
        app:tint="@color/black" />

    <ImageButton
        android:id="@+id/btnSPTCriarp1"
        android:layout_width="28dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/icon_more"
        app:layout_constraintBottom_toBottomOf="@+id/fieldSPTCriarGlp1"
        app:layout_constraintStart_toEndOf="@+id/fieldSPTCriarGlp1"
        app:layout_constraintTop_toTopOf="@+id/fieldSPTCriarGlp1"
        app:tint="@color/transparente" />

    <ImageButton
        android:id="@+id/btnSPTCriarp2"
        android:layout_width="28dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/icon_more"
        app:layout_constraintBottom_toBottomOf="@+id/fieldSPTCriarGlp2"
        app:layout_constraintStart_toEndOf="@+id/fieldSPTCriarGlp2"
        app:layout_constraintTop_toTopOf="@+id/fieldSPTCriarGlp2"
        app:tint="@color/transparente" />

    <ImageButton
        android:id="@+id/btnSPTCriarp3"
        android:layout_width="28dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/icon_more"
        app:layout_constraintBottom_toBottomOf="@+id/fieldSPTCriarGlp3"
        app:layout_constraintStart_toEndOf="@+id/fieldSPTCriarGlp3"
        app:layout_constraintTop_toTopOf="@+id/fieldSPTCriarGlp3"
        app:tint="@color/transparente" />

    <ImageButton
        android:id="@+id/btnSPTCriarm1"
        android:layout_width="28dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/ic_menos"
        app:layout_constraintBottom_toBottomOf="@+id/fieldSPTCriarGlp1"
        app:layout_constraintEnd_toStartOf="@+id/fieldSPTCriarGlp1"
        app:layout_constraintTop_toTopOf="@+id/fieldSPTCriarGlp1"
        app:tint="@color/transparente" />

    <ImageButton
        android:id="@+id/btnSPTCriarm2"
        android:layout_width="28dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/ic_menos"
        app:layout_constraintBottom_toBottomOf="@+id/fieldSPTCriarGlp2"
        app:layout_constraintEnd_toStartOf="@+id/fieldSPTCriarGlp2"
        app:layout_constraintTop_toTopOf="@+id/fieldSPTCriarGlp2"
        app:layout_constraintVertical_bias="0.25"
        app:tint="@color/white" />

    <ImageButton
        android:id="@+id/btnSPTCriarm3"
        android:layout_width="28dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/ic_menos"
        app:layout_constraintBottom_toBottomOf="@+id/fieldSPTCriarGlp3"
        app:layout_constraintEnd_toStartOf="@+id/fieldSPTCriarGlp3"
        app:layout_constraintTop_toTopOf="@+id/fieldSPTCriarGlp3"
        app:tint="@color/transparente" />

    <ImageView
        android:id="@+id/imgSPTCriarSeg2"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="@+id/imgSPTCriarSeg1"
        app:layout_constraintStart_toStartOf="@+id/imgSPTCriarSeg1"
        app:layout_constraintTop_toBottomOf="@+id/imgSPTCriarSeg1"
        app:srcCompat="@drawable/icon_2" />

    <ImageView
        android:id="@+id/imgSPTCriarSeg3"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="@+id/imgSPTCriarSeg2"
        app:layout_constraintStart_toStartOf="@+id/imgSPTCriarSeg2"
        app:layout_constraintTop_toBottomOf="@+id/imgSPTCriarSeg2"
        app:srcCompat="@drawable/icon_3" />

    <ImageButton
        android:id="@+id/BntSptCriarSalvarFuro"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginStart="110dp"
        android:background="@color/transparente"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/TxtSptCriarTitulodFuro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/TxtSptCriarTitulodFuro"
        app:layout_constraintTop_toTopOf="@+id/TxtSptCriarTitulodFuro"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/icon_save"
        app:tint="@color/white" />

    <ImageButton
        android:id="@+id/bntSptCriarProxAmostra"
        android:layout_width="75dp"
        android:layout_height="65dp"
        android:layout_marginBottom="20dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/BntSptCriarFinalizarEnsaio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/BntSptCriarFinalizarEnsaio"
        app:layout_constraintTop_toTopOf="@+id/BntSptCriarFinalizarEnsaio"
        app:srcCompat="@drawable/icon_more_amostra" />

</androidx.constraintlayout.widget.ConstraintLayout>