    <TextView
        android:id="@+id/TxtSptCriarProfdadAmostr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/TxtSptcriarProfundidadeStr"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/TxtSptCriarNAmostra"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/TxtSptCriarNAmostra"
        app:layout_constraintTop_toBottomOf="@+id/TxtSptCriarNAmostra" />

    <TextView
        android:id="@+id/TxtSptCriarSegmentAmtra"
        android:layout_width="wrap_content"
