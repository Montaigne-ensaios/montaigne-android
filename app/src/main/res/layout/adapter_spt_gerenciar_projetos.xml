<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardSPTGerenciar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="7dp"
    app:cardElevation="7dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgSPTGerenciarThumb"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_margin="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo_para_sal_o_de_beleza" />

        <TextView
            android:id="@+id/txtSPTFurosNome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/imgSPTGerenciarThumb"
            android:layout_alignBottom="@+id/imgSPTGerenciarThumb"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/imgSPTGerenciarThumb"
            android:text="Nome do Ensaio"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgSPTGerenciarThumb"
            app:layout_constraintTop_toTopOf="@+id/imgSPTGerenciarThumb" />

        <TextView
            android:id="@+id/txtSPTGenrenciarDesc"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="Texto de descrição. \nEste texto pode ser substituido por múltiplos textViews."
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/checkSelectSPTGerenciar"
            app:layout_constraintStart_toStartOf="@+id/txtSPTFurosNome"
            app:layout_constraintTop_toBottomOf="@+id/txtSPTFurosNome" />

        <CheckBox
            android:id="@+id/checkSelectSPTGerenciar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:clickable="false"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/txtSPTGenrenciarDesc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>