<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MontaigneAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gradiente_claro</item>
        <item name="colorPrimaryVariant">@color/gradiente_claro</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>


        <item name="android:windowBackground">@color/fundo_2</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MontaigneAndroid.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Edit_Text">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/style_edit_text</item>
    </style>
    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">40dp</item>
    </style>

    <style name="Theme.MontaigneAndroid.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MontaigneAndroid.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>